# ========================================
# BN88 Frontend Environment Configuration
# ========================================
# Copy this file to .env before running the frontend
# Note: Only variables prefixed with VITE_ are exposed to the browser
# Never commit the .env file to version control

# ========================================
# API Configuration
# ========================================
# Backend API base URL (proxied through Vite dev server)
VITE_API_BASE=http://127.0.0.1:3000/api
VITE_ADMIN_API_BASE=http://127.0.0.1:3000/api
# Backend base URL (for direct API calls, if needed)
VITE_API_BASE_URL=http://127.0.0.1:3000

# ========================================
# Tenant Configuration
# ========================================
# Default tenant code (must match backend TENANT_DEFAULT)
VITE_TENANT=bn9
VITE_DEFAULT_TENANT=bn9
# Default bot ID for development
VITE_DEFAULT_BOT_ID=dev-bot

# ========================================
# Build Metadata
# ========================================
VITE_APP_VERSION=dev

# ========================================
# Optional: Admin Utilities
# ========================================
# Admin maintenance code (leave empty for normal operation)
VITE_ADMIN_CODE=

# ========================================
# Optional: OpenAI Integration
# ========================================
# For local AI-assisted workflows (e.g., content generation)
VITE_OPENAI_API_KEY=
VITE_OPENAI_MODEL=gpt-4o-mini
