# Basic execution
NODE_ENV=development
PORT=3000

# Database - PostgreSQL (use docker-compose or your own PostgreSQL server)
# For development with docker-compose: docker-compose up db
DATABASE_URL=postgresql://admin:password@localhost:5432/bn88?schema=public

# Alternative: SQLite for quick local development (no Docker needed)
# DATABASE_URL=file:./prisma/dev.db

APP_BASE_URL=http://localhost:3000
PUBLIC_BASE_URL=http://localhost:3000
WEBHOOK_BASE_URL=http://localhost:3000

# Security - CHANGE THESE IN PRODUCTION!
JWT_SECRET=bn9_dev_secret_change_in_production
JWT_EXPIRE=7d
SECRET_ENC_KEY_BN9=0123456789abcdef0123456789abcdef

# API surface
ENABLE_ADMIN_API=1
ALLOWED_ORIGINS=http://localhost:5555,http://localhost:5173
TENANT_DEFAULT=bn9

# LINE credentials (optional when developing webhook flows)
LINE_CHANNEL_SECRET=
LINE_CHANNEL_ACCESS_TOKEN=
LINE_DEV_SKIP_VERIFY=1

# External auth/platform helpers (optional)
FACEBOOK_VERIFY_TOKEN=
TELEGRAM_BOT_TOKEN=

# Redis - for caching and queues (optional for basic development)
# Use docker-compose: docker-compose up redis
# Redis runs on port 6380 in docker-compose to avoid conflicts
REDIS_URL=redis://127.0.0.1:6380
REDIS_PORT=6380
ENABLE_REDIS=1
DISABLE_REDIS=0
REDIS_RATE_LIMIT=60
MESSAGE_RATE_LIMIT_PER_MIN=60
MESSAGE_RATE_LIMIT_WINDOW_SECONDS=90

# OpenAI / AI helpers (optional - leave empty to disable AI features)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-ada-002
OPENAI_VISION_MODEL=gpt-4o-mini-vision-preview
OPENAI_KEY=
OPENAI_SECRET_KEY=

# LINE Engagement Platform (optional)
LEP_BASE_URL=http://localhost:8080

# Admin seeding - Default admin account
# CHANGE PASSWORD IN PRODUCTION!
ADMIN_EMAIL=root@bn9.local
ADMIN_PASSWORD=bn9@12345
ENABLE_DEV_ROUTES=1

# Other helpers
API_BASE_URL=http://localhost:3000
TZ=Asia/Bangkok
